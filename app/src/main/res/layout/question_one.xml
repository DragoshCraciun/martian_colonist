<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.galacticcoders.whowantstobeamartiancolonist.QuestionOne">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/start_quizz_bg" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/question_bg"

        android:gravity="center"
        android:text="@string/question_one"
        android:textAlignment="center" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hydrogen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/answer_left_bg"
                android:button="@null"
                android:onClick="onRadioButtonClick"
                android:text="@string/hydrogen"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/helium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/answer_right_bg"
                android:button="@null"
                android:onClick="onRadioButtonClick"
                android:text="@string/helium"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/nitrogen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/answer_left_bg"
                android:button="@null"
                android:onClick="onRadioButtonClick"
                android:text="@string/nitrogen"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/oxygen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/answer_right_bg"
                android:button="@null"
                android:onClick="onRadioButtonClick"
                android:text="@string/oxygen"
                android:textAlignment="center" />

        </LinearLayout>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_bg"
        android:onClick="nextQuestion"
        android:text="@string/final_answer" />

</RelativeLayout>
