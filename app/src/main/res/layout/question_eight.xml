<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootView"
    tools:context="com.galacticcoders.whowantstobeamartiancolonist.QuestionEight">

    <ImageView style="@style/QuizBg" />

    <TextView
        android:id="@+id/question"
        style="@style/Question"
        android:text="@string/question_eight" />

    <LinearLayout style="@style/AnswerSection">

        <LinearLayout style="@style/AnswerGroup">

            <CheckBox
                android:id="@+id/callisto"
                style="@style/AnswerLeft"
                android:text="@string/callisto" />

            <CheckBox
                android:id="@+id/titan"
                style="@style/AnswerRight"
                android:text="@string/titan" />

        </LinearLayout>

        <LinearLayout style="@style/AnswerGroup">

            <CheckBox
                android:id="@+id/phobos"
                style="@style/AnswerLeft"
                android:text="@string/phobos" />

            <CheckBox
                android:id="@+id/deimos"
                style="@style/AnswerRight"
                android:text="@string/deimos" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_question"
        style="@style/NextQuestion" />

</RelativeLayout>
