<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootView"
    tools:context="com.galacticcoders.whowantstobeamartiancolonist.QuestionSeven">

    <ImageView style="@style/QuizBg" />

    <TextView
        android:id="@+id/question"
        style="@style/Question"
        android:text="@string/question_seven" />

    <LinearLayout style="@style/AnswerSection">

        <LinearLayout style="@style/AnswerGroup">

            <EditText
                android:id="@+id/marsGod"
                style="@style/AnswerLeft"
                android:hint="@string/mars_hint"
                android:inputType="text" />

            <EditText
                android:id="@+id/venusGod"
                style="@style/AnswerRight"
                android:hint="@string/venus_hint"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout style="@style/AnswerGroup">

            <EditText
                android:id="@+id/jupiterGod"
                style="@style/AnswerLeft"
                android:hint="@string/jupiter_hint"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/neptuneGod"
                style="@style/AnswerRight"
                android:hint="@string/neptune_hint"
                android:inputType="textPersonName" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_question"
        style="@style/NextQuestion" />

</RelativeLayout>
