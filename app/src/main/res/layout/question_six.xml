<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.galacticcoders.whowantstobeamartiancolonist.QuestionOne">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/start_quizz_bg" />

    <TextView
        android:id="@+id/question"
        style="@style/Question"
        android:text="@string/question_six"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question">

        <RadioGroup
            android:id="@+id/rg_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/marsAU"
                style="@style/AnswerLeft"
                android:layout_weight="1"
                android:text="@string/au_mars" />

            <RadioButton
                android:id="@+id/venusAU"
                style="@style/AnswerRight"
                android:layout_weight="1"
                android:text="@string/au_venus" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/jupiterAU"
                style="@style/AnswerLeft"
                android:layout_weight="1"
                android:text="@string/au_jupiter" />

            <RadioButton
                android:id="@+id/saturnAU"
                style="@style/AnswerRight"
                android:layout_weight="1"
                android:text="@string/au_saturn" />

        </RadioGroup>

    </RadioGroup>

    <Button style="@style/NextQuestion" />

</RelativeLayout>